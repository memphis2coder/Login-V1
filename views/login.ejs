<%- include('partials/header') %>

<div class="login d-flex align-items-center text-center">
  <div class="container">
    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">
            <a href="/" class="back">&#x2190 go back</a>
            <h2 class="card-title logo">L</h2>
            <h5 class="pb-3">Log In</h5>
            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username" />
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password" />
              </div>
              <button type="submit" class="btn btn-info btn-block btn-custom">
                Log In
              </button>
            </form>
          </div>
        </div>
      </div>

      <div class="col-sm-4 mt-3 mt-md-0">
            <div class="card h-auto">
              <div class="card-body">
                <a class="btn btn-block btn-md btn-social btn-google" href="/auth/google" role="button">
                  <i class="fab fa-google"></i>
                  Sign In with Google
                </a>
              </div>
              <div class="card-body">
                <a class="btn btn-block btn-md btn-social btn-github" href="/auth/github" role="button">
                  <i class="fab fa-github"></i>
                  Sign In with Github
                </a>
              </div>
            </div>
          </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>

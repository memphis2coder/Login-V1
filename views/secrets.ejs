<%- include('partials/header') %>

<div class="secrets d-flex align-items-center text-center">
  <div class="container">
    <div class="card shadow">
      <div class="card-body">
        <h1 class="card-title">What is the world's favorite food?</h1>
        <hr />

        <div>
          <% usersWithSecrets.forEach(function(users) { %>
          <p class="secrets-text"><%=users.secret%></p>
          <% }) %>
        </div>
        <div>
          <a class="btn btn-info" href="/logout" role="button">Log Out</a>
          <a class="btn btn-primary" href="/submit" role="button"
            >Submit your favorite</a
          >
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
